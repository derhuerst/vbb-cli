#!/usr/bin/env coffee

path =			require 'path'
commander =		require 'commander'
Q =				require 'q'
inquirer =		require 'inquirer'
async =			require 'async'
c256 =			require 'colors-256'
chalk =			require 'chalk'
Duration =		require 'duration-js'

vbb =			require 'vbb'
util =			require 'vbb-util'
search =		require '../util/search' # todo: does `..` work?
routes =		require '../util/routes' # todo: does `..` work?





pkg =			require path.join __dirname, '../package.json'

program = commander
.version pkg.version
.option '-f, --from [station]', 'Where the routes shall begin.'
.option '-t, --to [station]', 'Where the routes shall end.'
.option '-r, --results [n]', 'The number of routes.'
.option '-p, --products [list]', 'Allowed transportation types.'
.parse process.argv

program.client = vbb '2e9c6a18-8f2e-440c-a8bb-555e85cbeee9'





search program
.then routes
